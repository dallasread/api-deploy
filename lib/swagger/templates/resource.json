{
    "paths": {
        "{{path}}": {
            "{{downcase method}}": {
                "operationId": "{{operationId}}",
                "x-api-deploy": {
                    "sdk": {
                        "method": "{{sdkMethod}}"
                    }
                },
                "x-amazon-lambda": {
                    "handler": "{{handler}}",
                    "memorySize": "{{defaults.lambda.memorySize}}",
                    "role": "{{defaults.lambda.role}}",
                    "timeout": "{{defaults.lambda.timeout}}",
                    "runtime": "{{defaults.lambda.runtime}}"
                },
                "x-amazon-apigateway-auth": {
                    "type": "NONE"
                },
                "x-amazon-apigateway-integration": {
                    "type": "AWS",
                    "uri": null,
                    "apiKeyRequired": false,
                    "httpMethod": "{{upcase method}}",
                    "cacheNamespace": null,
                    "cacheKeyParameters": [],
                    "credentials": null,
                    "requestTemplates": {
                        "application/json": {
                            "payload": "$input.params()",
                            "path": "$input.params().path",
                            "query": "$input.params().querystring",
                            "header": "$input.params().header",
                            "Authorization": "$input.params(\"Authorization\")"
                        }
                    },
                    "requestParameters": {
                        "method.request.header.Authorization": true
                    },
                    "requestModels": {
                        "application/json": "Empty"
                    },
                    "responses": {
                        "200": {
                            "statusCode": "200",
                            "responseParameters": {
                                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization'",
                                "method.response.header.Access-Control-Allow-Methods": "'*'",
                                "method.response.header.Access-Control-Allow-Origin": "'*'"
                            },
                            "responseModels": {
                                "application/json": "Empty"
                            }
                        },
                        "default": {
                            "statusCode": "400",
                            "responseParameters": {
                                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization'",
                                "method.response.header.Access-Control-Allow-Methods": "'*'",
                                "method.response.header.Access-Control-Allow-Origin": "'*'"
                            },
                            "responseModels": {
                                "application/json": "Empty"
                            }
                        }
                    }
                }
            }
        }
    }
}
